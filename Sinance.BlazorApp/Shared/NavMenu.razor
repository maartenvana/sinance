<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Sinance.BlazorApp</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="Categories" Match="NavLinkMatch.All">
                <span class="oi oi-brush" aria-hidden="true"></span> Categories
            </NavLink>
        </li>

        <li class="nav-item px-3">
            <NavLink class="nav-link" @onclick="()=> expandTransactions = !expandTransactions">
                <span class="oi oi-wrench" aria-hidden="true"></span> Transactions
            </NavLink>
            @if (expandTransactions)
            {
                <div class="sub-menu rounded ml-2">
                    <NavLink class="nav-link" href="Transactions/Search">
                        <span class="oi oi-ellipses" aria-hidden="true"></span> Search
                    </NavLink>
                </div>
            }
        </li>
    </ul>
</div>

@code {
    private bool expandTransactions = false;

    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
