@using Sinance.Domain.Entities

@model Sinance.Web.Model.NavigationModel

<div class="navbar-default sidebar" role="navigation">
    <div class="sidebar-nav navbar-collapse">
        <ul class="nav" id="side-menu">
            <li>
                <a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard fa-fw"></i> Dashboard</a>
            </li>
            <li>
                <a href="#"><i class="fa fa-table fa-fw"></i> Betaal rekeningen<span class="fa arrow"></span></a>
                <ul class="nav nav-second-level">
                    @foreach (var bankAccount in Model.BankAccounts?.Where(item => !item.Disabled && item.AccountType == BankAccountType.Checking))
                    {
                    <li>
                        <a href="@Url.Action("Index", "AccountOverview", new {@bankAccountId = bankAccount.Id})"><span>@bankAccount.Name</span></a>
                    </li>
                    }
                </ul>
            </li>
            <li>
                <a href="#"><i class="fa fa-table fa-fw"></i> Spaar rekeningen<span class="fa arrow"></span></a>
                <ul class="nav nav-second-level">
                    @foreach (var bankAccount in Model.BankAccounts?.Where(item => !item.Disabled && item.AccountType == BankAccountType.Savings))
                    {
                    <li>
                        <a href="@Url.Action("Index", "AccountOverview", new { @bankAccountId = bankAccount.Id })"><span>@bankAccount.Name</span></a>
                    </li>
                    }
                </ul>
            </li>
            <li>
                <a href="#"><i class="fa fa-bar-chart-o fa-fw"></i> Rapportages<span class="fa arrow"></span></a>
                <ul class="nav nav-second-level">
                    <li>@Html.ActionLink("Uitgaven overzicht", "ExpenseOverview", "Report")</li>
                    <li>@Html.ActionLink("Inkomsten overzicht", "IncomeOverview", "Report")</li>
                    <!--<li>@Html.ActionLink("Uitgaves per categorie", "ExpensePerCategory", "Report")</li>-->
                    @foreach (var customReport in Model.CustomReports)
                    {
                    <li>@Html.ActionLink(customReport.Name, "CustomReport", "Report", new { reportId = customReport.Id }, new { })</li>
                    }
                </ul>
            </li>
            <li>
                <a href="@Url.Action("Status", "Budget")"><i class="fa fa-dollar fa-fw"></i> Budget</a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Category")"><i class="fa fa-pencil fa-fw"></i> Categorieen</a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Import")"><i class="fa fa-upload fa-fw"></i> Importeren</a>
            </li>
            <li>
                <a href="#"><i class="fa fa-wrench fa-fw"></i> Beheer<span class="fa arrow"></span></a>
                <ul class="nav nav-second-level">
                    <li>
                        @Html.ActionLink("Rapportage toevoegen", "AddCustomGraphReport", "Report")
                    </li>
                    <li>@Html.ActionLink("Rekeningen beheren", "Index", "BankAccount")</li>
                    <li>@Html.ActionLink("Rekening toevoegen", "AddAccount", "BankAccount")</li>
                    <li>@Html.ActionLink("Budget beheren", "Index", "Budget")</li>
                </ul>
            </li>
        </ul>
    </div>
</div>