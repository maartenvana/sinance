@using Sinance.BlazorApp.Business.Model.Transaction
@using System.Globalization

<table class="table table-striped table-hover mb-0">
    <thead>
        <tr>
            <th>Date</th>
            <th>Name</th>
            <th>Category</th>
            <th>Amount</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var transaction in Transactions)
        {
            <tr>
                <td>@transaction.Date</td>
                <td>@transaction.Name</td>
                <td>@transaction.CategoryName</td>
                <td>@transaction.Amount.ToString("0.##", CultureInfo.CurrentCulture)</td>
                <td>@transaction.Description</td>
            </tr>
        }
    </tbody>
</table>

@if (Transactions.Any() && Transactions.Count % PageSize == 0)
{
    <button class="btn btn-block btn-primary"  @onclick="OnLoadMore">Load More</button>
}

@code {
    [Parameter]
    public List<TransactionModel> Transactions { get; set; }

    [Parameter]
    public int PageSize { get; set; }

    [Parameter]
    public EventCallback OnLoadMore { get; set; }
}