@model Sinance.Domain.Entities.CustomReport
@{
    ViewBag.Title = "CustomGraphReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts {

    <script type="text/javascript">
        $(function () {
            var date = new Date();
            CreateGraph(date.year);
        });

        function CreateGraph(year) {
            //profitGraphCurrentYear = year;
            //$("#profitGraphYearSpan").text(year);

            $.ajax({
                type: "POST",
                url: "@Url.Action("CustomReportMonthlyGraph", "Graph")",
                data: {
                    customReportId: @Model.Id,
                    year: year
                },
                success: function (response) {
                    var chart = new Highcharts.Chart({
                        chart: {
                            renderTo: "ExpenseGraphDiv",
                            zoomType: "y"
                        },
                        title: {
                            floating: true,
                            text: ""
                        },
                        yAxis: {
                            title: {
                                text: ""
                            }
                        },
                        xAxis: {
                            categories: response.objectData.graphCategories
                        },
                        credits: {
                            enabled: false
                        },
                        legend: {
                            enabled: true
                        },
                        tooltip: {
                            headerFormat: '',
                            pointFormat: '<span style="color:{point.color}">\u25CF</span> {series.name}: <b>€ {point.y:.2f}</b><br />'
                        },
                        series: response.objectData.graphData
                    });
                }
            });
        }
    </script>
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@Model.Name @Html.ActionLink("Edit", "EditCustomGraphReport", "Report", new { @reportId = Model.Id }, new { @class = "pull-right btn btn-default"})</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">Grafische Rapportage</div>
            <div class="panel-body">
                <div id="ExpenseGraphDiv"></div>
            </div>
        </div>
    </div>
</div>