@model Sinance.Web.Model.Budget.CreateBudgetModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var selectList = new SelectList(Model.AvailableCategories, "Id", "Name");
}

<div class="row">
    <div class="col-lg-12">
        <h2>Budget Toevoegen</h2>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SelectedCategoryId" class="control-label"></label>
                <select asp-for="SelectedCategoryId" asp-items="selectList" class="form-control">
                    <option>Selecteer een categorie</option>
                </select>
                <span asp-validation-for="SelectedCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-default">Annuleren</a>
                <input type="submit" value="Aanmaken" class="btn btn-primary pull-right" />
            </div>
        </form>
    </div>
</div>