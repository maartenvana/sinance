@using Sinance.BlazorApp.Business.Model.Transaction
@using System.Globalization

<table class="table table-striped table-hover table-transactions">
    <thead>
        <tr>
            <th class="date">Date</th>
            <th class="category">Type</th>
            <th class="name">Name</th>
            <th class="amount">Amount</th>
            <th class="description">Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var transaction in Transactions)
        {
            <tr>
                <td class="date">@transaction.Date.ToShortDateString()</td>
                <td class="category">
                    @if (transaction.CategoryShortName != null)
                    {
                        <span class="badge badge-secondary" style="background-color: @transaction.CategoryColorCode">@transaction.CategoryShortName</span>
                    }
                    else
                    {
                        <span class="badge badge-secondary pointer" data-toggle="modal" data-target="#assignCategoryModel"><span class="oi oi-plus"></span></span>
                    }
                </td>
                <td class="name">@transaction.Name</td>
                <td class="amount"><span class="badge badge-@(transaction.Amount > 0 ? "success" : "danger")" >@transaction.Amount.ToString("C2", CultureInfo.CurrentCulture)</span></td>
                <td class="description">@transaction.Description</td>
            </tr>
        }
    </tbody>
</table>

<AssignCategoryModal></AssignCategoryModal>

@code {
    [Parameter]
    public List<TransactionModel> Transactions { get; set; }
}